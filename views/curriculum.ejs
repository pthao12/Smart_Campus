<!DOCTYPE html>
<html>
    <head>
        <style>
            body {
                font-family: Arial, sans-serif;
            }
    
             h2, h3 {
                color: #333;
            }
    
            table {
                width: 100%;
                border-collapse: collapse;
                margin-top: 20px;
            }
    
            th, td {
                padding: 12px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }
    
            th {
                background-color: #f2f2f2;
            }
    
            tbody tr:hover {
                background-color: #f5f5f5;
            }
            
            .Download {
                text-align: center;
            }
        </style>
    </head>
<body>
    <h1>curriculum</h1>
    <%- include('./partials/search.ejs')  %>

    <table style="width: 100%">
        <tr>
            <th>Course ID</th>
            <th>Course Name</th>
            <th>Status</th>
            <th>Update Date</th>
            <th>Fee</th>
            <th>Content</th>
        </tr>
        <% for(let i = 0; i < data.length; i++) {%>
            <tr>
                <th> <%= data[i].courseID %> </th>
                <td> <%= data[i].courseName %> </td>
                <td> <%= data[i].status %> </td>
                <td> <%= data[i].updateDate.toLocaleDateString('el-GR') %> </td>
                <td> <%= data[i].priceEach %> </td>
                <td> 
                    <% if (data[i].status == 'Đã cập nhật') {%> 
                        <a href="https://tuananalytic.com/wp-content/uploads/2021/06/very-select-such-insert-so-database-much-sql-1024x768.jpeg.webp">
                            <i class="fa-solid fa-file-arrow-down"></i>
                        </a>
                    <% } %> 
                </td>
            </tr>
        <% } %>
    </table>
</body>
</html>